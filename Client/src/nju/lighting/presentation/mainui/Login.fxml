<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minHeight="200.0" onMouseDragged="#Drag" onMousePressed="#getOffSet" prefHeight="330.0"
            prefWidth="430.0" style="-fx-background-radius: 10px;"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="nju.lighting.presentation.mainui.LoginController">
    <children>
        <ImageView fitHeight="330.0" fitWidth="438.0" layoutX="-0.0" layoutY="-0.0">
            <image>
                <Image url="@../../../../images/待选背景/背景图1.png"/>
            </image>
        </ImageView>
        <Pane fx:id="mainPane" layoutX="124.0" layoutY="7.0">
            <children>
                <JFXTextField fx:id="account" focusColor="#5599ff" layoutX="9.0" layoutY="102.0" prefHeight="23.0"
                              prefWidth="162.0"/>
                <JFXPasswordField fx:id="password" focusColor="#5599ff" layoutX="9.0" layoutY="143.0"
                                  onKeyPressed="#loginByEnter" prefHeight="23.0" prefWidth="162.0"/>
                <JFXButton fx:id="loginBtn" layoutX="9.0" layoutY="235.0" onAction="#login" opacity="0.5"
                           prefHeight="23.0" prefWidth="162.0"
                           style="-fx-background-color: #5599FF; -fx-background-radius: 5px;" text="登录"
                           textFill="WHITE"/>
                <HBox layoutX="10.0" layoutY="198.0" spacing="18.0">
                    <children>
                        <JFXCheckBox checkedColor="#5599ff" text="保存密码"/>
                        <JFXCheckBox checkedColor="#5599ff" text="自动登录"/>
                    </children>
                </HBox>
                <Button fx:id="miniBtn" layoutX="246.0" mnemonicParsing="false" onAction="#mini" opacity="0.5"
                        style="-fx-background-color: TRANSPARENT, TRANSPARENT, TRANSPARENT, TRANSPARENT;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                            <image>
                                <Image url="@../../../../images/subtract.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="closeBtn" layoutX="274.0" mnemonicParsing="false" onAction="#close" opacity="0.5"
                        style="-fx-background-color: TRANSPARENT, TRANSPARENT, TRANSPARENT, TRANSPARENT;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                            <image>
                                <Image url="@../../../../images/close.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </Pane>
        <Pane fx:id="dialogPane" layoutY="289.0" prefHeight="41.0" prefWidth="438.0"
              style="-fx-background-color: DDDDDD;" visible="false">
            <children>
                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="14.0" layoutY="6.0">
                    <image>
                        <Image url="@../../../../images/login_dialog.png"/>
                    </image>
                </ImageView>
                <Label fx:id="dialogLabel" layoutX="60.0" layoutY="11.0" text="错误信息"/>
                <Button fx:id="closeDialogBtn" layoutX="391.0" layoutY="6.0" mnemonicParsing="false"
                        onAction="#closeDialog" opacity="0.5"
                        style="-fx-background-color: TRANSPARENT, TRANSPARENT, TRANSPARENT, TRANSPARENT;">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                            <image>
                                <Image url="@../../../../images/close.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </Pane>
        <JFXSpinner fx:id="spinner" layoutX="190.0" layoutY="130.0" visible="false"/>
    </children>
</AnchorPane>
